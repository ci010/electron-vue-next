{
  "name": "electron-vue-next",
  "version": "0.0.0",
  "main": "dist/source/index.js",
  "private": true,
  "description": "",
  "scripts": {
    "build": "(concurrently --kill-others-on-fail \"npm:build:main\" \"npm:build:renderer\") && npm run build:app",
    "build:main": "cross-env NODE_ENV=production rollup --config rollup.config.js",
    "build:renderer": "cross-env NODE_ENV=production vite build ./src/renderer --outDir ../../dist/source/renderer",
    "build:app": "electron-builder build",


    "lint": "eslint --ext .ts,.vue,.js src scripts",
    "lint:fix": "npm run lint -- --fix",


    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\" \"npm:run:electron\"",
    "dev:main": "cross-env NODE_ENV=development rollup --config rollup.config.js --watch ./src/main",
    "dev:renderer": "cross-env NODE_ENV=development vite serve ./src/renderer --outDir ../../dist/source/renderer",
    "run:electron": "electron ."
  },
  "author": {
    "email": "example@email.com",
    "name": "example"
  },
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^4.3.5",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0-beta.13",
    "vuex": "^4.0.0-beta.4"
  },
  "external": [
    "electron-updater"
  ],
  "build": {
    "directories": {
      "output": "dist/platforms",
      "buildResources": "dist/platforms",
      "app": "."
    }
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@vue/compiler-sfc": "^3.0.2",
    "builtin-modules": "^3.1.0",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.9.1",
    "esbuild": "^0.6.33",
    "fs-extra": "^9.0.1",
    "rollup": "^2.28.2",
    "tslib": "^1.14.1",
    "typescript": "^4.0.3",
    "vite": "^1.0.0-rc.6"
  },
  "optionalDependencies": {
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-vue": "^7.1.0",
    "vitepress": "^0.7.4"
  }
}
